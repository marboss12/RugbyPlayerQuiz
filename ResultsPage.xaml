<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RugbyPlayerQuiz.ResultsPage"
             Title="Результаты"
             BackgroundColor="White">

    <ScrollView>
        <StackLayout Padding="20" Spacing="30">

            <!-- Заголовок -->
            <Label Text="Результаты викторины" 
                   HorizontalOptions="Center" 
                   TextColor="White"
                   FontSize="28"
                   FontAttributes="Bold"
                   Margin="0,50,0,0"/>

            <!-- Иконка результата -->
            <Image Source="trophy.png"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center"/>

            <!-- Статистика -->
            <Frame BackgroundColor="{StaticResource SecondaryColor}"
                   Padding="20"
                   CornerRadius="15"
                   HorizontalOptions="Fill">
                <StackLayout Spacing="15">
                    <Label Text="{Binding ResultText}" 
                           TextColor="White"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <Label Text="{Binding ScoreText}" 
                           TextColor="White"
                           FontSize="20"
                           HorizontalOptions="Center"/>

                    <BoxView Color="LightGray" HeightRequest="1" HorizontalOptions="Fill"/>

                    <Label Text="Ваш новый статус:" 
                           TextColor="LightGray"
                           FontSize="16"
                           HorizontalOptions="Center"/>

                    <Label Text="{Binding PlayerStatus}" 
                           TextColor="Gold"
                           FontSize="22"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextDecorations="Underline"/>
                </StackLayout>
            </Frame>

            <!-- Кнопки -->
            <StackLayout Spacing="15" Margin="0,30,0,0">
                <Button Text="Играть снова" 
                        Clicked="OnPlayAgainClicked"
                        BackgroundColor="{StaticResource AccentColor}"
                        TextColor="White"
                        FontSize="18"
                        HeightRequest="60"
                        CornerRadius="30"/>

                <Button Text="В главное меню" 
                        Clicked="OnMainMenuClicked"
                        BackgroundColor="Gray"
                        TextColor="White"
                        FontSize="18"
                        HeightRequest="60"
                        CornerRadius="30"/>
                <Button Text="Наш Telegram канал" 
                        Clicked="OnTelegramChannelClicked"
                        BackgroundColor="#0088cc"
                        TextColor="White"
                        FontSize="18"
                        HeightRequest="60"
                        CornerRadius="30">
                    <Button.ImageSource>
                        <FontImageSource Glyph="📢"
                                        FontFamily="MaterialIcons"
                                        Color="White"
                                        Size="24"/>
                    </Button.ImageSource>
                </Button>
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>