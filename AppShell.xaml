<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:RugbyPlayerQuiz"
       x:Class="RugbyPlayerQuiz.AppShell"
       Title="RugbyPlayerQuiz"
       FlyoutBehavior="Disabled">

    <!-- УБЕРИТЕ LoadingPage из Shell -->
    <!-- Оставьте только основные страницы -->
    <ShellContent 
        Title="Главная" 
        ContentTemplate="{DataTemplate local:MenuPage}" 
        Route="MenuPage" />

    <ShellContent
        Title="Игра"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Смешанная лига"
        ContentTemplate="{DataTemplate local:MixedLeaguePage}"
        Route="MixedLeaguePage" />
    <ShellContent
        Title="Результаты"
        ContentTemplate="{DataTemplate local:ResultsPage}"
        Route="ResultsPage" />
</Shell>